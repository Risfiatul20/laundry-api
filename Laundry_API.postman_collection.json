{
  "info": {
    "name": "Laundry Digital API",
    "description": "API Collection for Laundry Digital Application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api"
